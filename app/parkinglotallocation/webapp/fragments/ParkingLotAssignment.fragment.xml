<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <VBox>
        <Label text="Vehicle Number" />
        <Input id="vehicleNumber" />
        <Label text="Driver Name" />
        <Input id="driverName" />
        <Label text="Driver Phone Number" />
        <Input id="driverPhoneNumber" />
        <Label text="Slot Number" />
        <Input id="slotNumber" />
        <Label text="Date & Time" />
        <DateTimePicker id="dateTime" />
        <Label text="Vehicle Type" />
        <Input id="vehicleType" />
        <Button text="Assign" press="onAssignPress" />
        <Button text="Cancel" press="onCancelPress" />
    </VBox>
</core:FragmentDefinition>
